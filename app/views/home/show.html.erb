<div class="py-12 sm:py-16">
  <div class="px-6 pb-16 mx-auto max-w-7xl lg:px-8">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="font-serif text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-300 sm:text-5xl">Latest Updates</h2>
    </div>
  </div>
  <div class="grid grid-cols-1 px-6 mx-auto max-w-7xl gap-x-8 gap-y-12 sm:gap-y-16 lg:grid-cols-2 lg:px-8">
    <article class="w-full max-w-2xl mx-auto lg:mx-0 lg:max-w-lg">
      <time datetime="<%= @last_update.published_at.strftime("%Y-%m-%d") %>" class="block text-sm leading-6 text-neutral-600 dark:text-neutral-300">
        <%= @last_update.published_at.strftime("%b %d, %Y") %>
      </time>
      <h2 id="featured-post" class="mt-4">
        <%= link_to @last_update.title, update_path(@last_update.slug.presence || @last_update.id), class: "text-3xl font-serif font-bold tracking-tight text-neutral-900 dark:text-neutral-300 sm:text-4xl hover:text-neutral-500 dark:hover:text-neutral-400", target: "_blank" %>
      </h2>
      <p class="mt-4 text-lg leading-8 text-neutral-600 dark:text-neutral-300">
        <%= @last_update.excerpt %>
      </p>
      <div class="flex flex-col justify-between gap-6 mt-4 sm:mt-8 sm:flex-row-reverse sm:gap-8 lg:mt-4 lg:flex-col">
        <div class="flex">
          <%= link_to "Continue reading →", update_path(@last_update.slug.presence || @last_update.id), class: "text-sm font-semibold leading-6 text-terracotta-600 dark:text-terracotta-500 hover:text-terracotta-500 dark:hover:text-terracotta-400", target: "_blank" %>
        </div>
      </div>
    </article>
    <div class="w-full max-w-2xl pt-12 mx-auto border-t border-neutral-900/10 sm:pt-16 lg:mx-0 lg:max-w-none lg:border-t-0 lg:pt-0">
      <div class="-my-12 divide-y divide-neutral-900/10">
        <% @updates.each do |update| %>
          <article class="py-12">
            <div class="relative max-w-xl group">
              <time datetime="<%= update.published_at.strftime("%Y-%m-%d") %>" class="block text-sm leading-6 text-neutral-600 dark:text-neutral-300">
                <%= update.published_at.strftime("%b %d, %Y") %>
              </time>
              <h2 class="mt-2 font-serif text-xl font-semibold text-neutral-900 text dark:text-neutral-300 group-hover:text-neutral-400">
                <%= link_to update_path(update.slug.presence || update.id), target: "_blank" do %>
                  <span class="absolute inset-0"></span>
                  <%= update.title %>
                <% end %>
              </h2>
              <p class="mt-4 text-sm leading-6 text-neutral-600 dark:text-neutral-300">
                <%= update.excerpt %>
              </p>
            </div>
          </article>
        <% end %>
      </div>
    </div>
  </div>
</div>
