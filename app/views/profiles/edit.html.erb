<div class="flex flex-col mx-auto my-6 gap-y-6 max-w-7xl sm:px-6 lg:px-8">
  <div class="flex flex-row justify-between px-4 gap-2 sm:px-0">
    <div>
      <h1 class="pr-2 font-serif lining-nums text-4xl font-bold tracking-tight leading-tight whitespace-nowrap text-neutral-900 dark:text-neutral-100">
        Edit Your Profile
      </h1>
    </div>
  </div>
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="px-4 sm:px-6 md:p-0 md:col-span-1 divide-y divide-neutral-200 dark:divide-neutral-700">
      <div class="py-6">
        <% if @profile.public %>
          <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100">
            Your profile is <strong>PUBLIC</strong>.
          </h3>
          <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
            Anyone can see you and all of your shots in <%= link_to "Community", community_index_path, class: "standard-link" %>.
          </p>
        <% else %>
          <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100">
            Your profile is <strong>PRIVATE</strong>.
          </h3>
          <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
            People can still view any of your shots if you give them a direct link, but you are not visible in <%= link_to "Community", community_index_path, class: "standard-link" %>.
          </p>
        <% end %>
      </div>
      <div class="py-6" data-controller="push-notifications" data-push-notifications-vapid-key-value="<%= Rails.application.credentials.webpush&.public_key&.tr("_-", "/+") %>">
        <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100" data-push-notifications-target="statusHeading">…</h3>
        <div class="flex items-center gap-2">
          <button class="hidden! px-3 py-2 button-white" data-action="click->push-notifications#attemptToSubscribe" data-push-notifications-target="bell">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
              <path d="M4.214 3.227a.75.75 0 0 0-1.156-.955 8.97 8.97 0 0 0-1.856 3.825.75.75 0 0 0 1.466.316 7.47 7.47 0 0 1 1.546-3.186ZM16.942 2.272a.75.75 0 0 0-1.157.955 7.47 7.47 0 0 1 1.547 3.186.75.75 0 0 0 1.466-.316 8.971 8.971 0 0 0-1.856-3.825Z" />
              <path fill-rule="evenodd" d="M10 2a6 6 0 0 0-6 6c0 1.887-.454 3.665-1.257 5.234a.75.75 0 0 0 .515 1.076 32.91 32.91 0 0 0 3.256.508 3.5 3.5 0 0 0 6.972 0 32.903 32.903 0 0 0 3.256-.508.75.75 0 0 0 .515-1.076A11.448 11.448 0 0 1 16 8a6 6 0 0 0-6-6Zm0 14.5a2 2 0 0 1-1.95-1.557 33.54 33.54 0 0 0 3.9 0A2 2 0 0 1 10 16.5Z" clip-rule="evenodd" />
            </svg>
          </button>
          <p class="text-sm text-neutral-600 dark:text-neutral-400" data-push-notifications-target="statusDescription"></p>
        </div>
      </div>
      <div class="py-6" data-controller="passkeys">
        <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100">Passkeys</h3>
        <% if Current.user.webauthn_credentials.any? %>
          <div class="mt-4">
            <div class="space-y-2">
              <% !Current.user.webauthn_credentials.order(:created_at).each do |credential| %>
                <div id="<%= dom_id(credential) %>" class="flex items-center justify-between py-2 px-3 bg-neutral-50 dark:bg-neutral-800 rounded-md">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-neutral-900 dark:text-neutral-100 truncate">
                      <%= credential.nickname.presence || "Unnamed Passkey" %>
                    </p>
                    <p class="text-xs text-neutral-500 dark:text-neutral-400">
                      Created <%= time_ago_in_words(credential.created_at) %> ago
                      <% if credential.last_used_at %>• Last used <%= time_ago_in_words(credential.last_used_at) %> ago<% end %>
                    </p>
                  </div>
                  <div class="ml-4 shrink-0">
                    <%= link_to "Delete", passkey_path(credential),
                        class: "text-sm text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
                        data: {turbo_method: :delete,turbo_confirm: "Are you sure you want to delete this passkey? You won't be able to use it to sign in anymore."}
                    %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="mt-4">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              You don't have any passkeys registered yet. Register one to enable passwordless authentication.
            </p>
          </div>
        <% end %>
        <div class="mt-4 flex items-center gap-2">
          <button class="px-3 py-2 button-white" data-passkeys-target="button" data-action="click->passkeys#register">
            Register a passkey
          </button>
        </div>
        <div id="passkey-success" class="hidden">
          <%= render Notification.new(type: :default, heading: "Passkey registered successfully", timeout: 3000) %>
        </div>
      </div>
      <% if Current.user.has_airtable? %>
        <div class="py-6">
          <%= render "shared/modal" %>
          <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100">
            You are connected to Airtable.
          </h3>
          <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
            If you want to disconnect or reset your Airtable connection, you can <%= link_to "do so here", disconnect_airtable_profile_path, class: "standard-link",  data: {turbo_method: :delete, action: "click->modal#confirm", title: "Disconnect Airtable", text: "Are you sure you want to disconnect your Airtable account? Your data will NOT be deleted from Airtable or Visualizer. You will be able to reconnect at any time to resume syncing."} %>.
          </p>
        </div>
      <% end %>
      <% if @authorized_applications.any? %>
        <div class="py-6">
          <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100">
            You have <strong><%= pluralize(@authorized_applications.size, "application") %></strong> authorized via OAuth.
          </h3>
          <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
            You can <%= link_to "manage #{@authorized_applications.size == 1 ? "it" : "them"} here", oauth_authorized_applications_path, class: "standard-link", data: {turbo: false} %>.
          </p>
        </div>
      <% end %>
      <% if @profile.decent_token.present? %>
        <div class="py-6">
          <h3 class="text-lg font-medium leading-6 text-neutral-900 dark:text-neutral-100">
            Your profile is connected to Decent.
          </h3>
          <%= turbo_frame_tag "decent_serial_numbers", src: decent_serial_numbers_profile_path %>
        </div>
      <% end %>
    </div>
    <hr class="mx-4 md:hidden sm:mx-6 text-neutral-200 dark:text-neutral-700">
    <%= render "form" %>
  </div>
</div>
