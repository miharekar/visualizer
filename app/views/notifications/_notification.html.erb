<div class="hidden overflow-hidden w-full max-w-sm bg-white rounded-lg ring-1 shadow-lg pointer-events-auto ring-black/5 dark:bg-neutral-800 dark:ring-black/30" data-controller="notification" data-notification-timeout-value="<%= notification.timeout %>" data-transition-enter="transform ease-out duration-300 transition" data-transition-enter-start="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2" data-transition-enter-end="translate-y-0 opacity-100 sm:translate-x-0" data-transition-leave="transition ease-in duration-100" data-transition-leave-start="opacity-100" data-transition-leave-end="opacity-0" data-notifications-target="notification">
  <div class="p-4">
    <div class="flex items-start">
      <div class="shrink-0">
        <%= notification.icon.html_safe %>
      </div>
      <div class="flex-1 ml-3 w-0">
        <p class="font-medium text-neutral-900 dark:text-neutral-200">
          <%= notification.heading %>
        </p>
        <% if notification.text %>
          <p class="mt-1 text-sm text-neutral-500 dark:text-neutral-400">
            <%= notification.text %>
          </p>
        <% end %>
      </div>
      <div class="flex ml-4 shrink-0">
        <button type="button" class="inline-flex bg-white rounded-md dark:ring-offset-black focus:ring-2 focus:ring-offset-2 focus:outline-none text-neutral-400 dark:bg-neutral-800 hover:text-neutral-500 focus:ring-terracotta-500" data-action="notification#close">
          <svg class="size-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
