<% active_classes = "border-terracotta-500 text-terracotta-600 dark:border-terracotta-400 dark:text-terracotta-400" %>
<% inactive_classes = "border-transparent text-neutral-500 hover:border-neutral-300 hover:text-neutral-700 dark:text-neutral-400 dark:hover:border-white/20 dark:hover:text-neutral-200" %>
<div class="flex flex-col mx-auto my-6 gap-y-6 max-w-3xl sm:px-6 lg:px-8">
  <div class="flex flex-row justify-between px-4 gap-2 sm:px-0">
    <div>
      <h1 class="pr-2 font-serif lining-nums text-4xl font-bold tracking-tight leading-tight whitespace-nowrap text-neutral-900 dark:text-neutral-100">
        Manage Dropdown Values
      </h1>
    </div>
  </div>
  <% if @dropdown_kinds.size > 1 %>
  <div class="border-b border-neutral-200 dark:border-white/10">
    <nav class="-mb-px flex space-x-8">
      <% @dropdown_kinds.each do |kind, title| %>
        <a href="<%= dropdown_values_path(kind:) %>" class="border-b-2 px-1 py-4 text-sm font-medium whitespace-nowrap <%= @kind == kind ? active_classes : inactive_classes %>">
          <%= title %>
        </a>
      <% end %>
    </nav>
  </div>
  <% end %>
  <div class="mt-3 overflow-hidden sm:rounded-md ring-1 ring-neutral-200 dark:ring-neutral-700">
    <ul role="list" class="divide-y divide-neutral-200 dark:divide-neutral-700">
      <%= render @dropdown_values %>
    </ul>
  </div>
</div>
