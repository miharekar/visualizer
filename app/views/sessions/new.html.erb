<div class="flex items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <%= inline_svg_tag "logo.svg", class: "w-auto h-16 mx-auto fill-current text-neutral-900 dark:text-neutral-200" %>
      <h2 class="mt-10 text-3xl font-extrabold text-center text-neutral-900 dark:text-neutral-200">
        Sign in to your account
      </h2>
    </div>
    <%= form_with(url: session_url, class: "mt-8 space-y-6") do |f| %>
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <%= f.email_field :email, autofocus: true, placeholder: "Email address", autocomplete: "email", class: "appearance-none rounded-none relative block w-full px-3 py-2 text-neutral-700 dark:text-neutral-300 placeholder:text-neutral-500 dark:placeholder:text-neutral-400 bg-white dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600 rounded-t-md focus:outline-none focus:ring-oxford-blue-500 focus:border-oxford-blue-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "appearance-none rounded-none relative block w-full px-3 py-2 text-neutral-700 dark:text-neutral-300 placeholder:text-neutral-500 dark:placeholder:text-neutral-400 bg-white dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600 rounded-b-md focus:outline-none focus:ring-oxford-blue-500 focus:border-oxford-blue-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <div></div>
        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_path, class: "font-medium text-oxford-blue-600 hover:text-oxford-blue-500" %>
        </div>
      </div>
      <div>
        <button class="cursor-pointer relative flex justify-center w-full px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md group bg-terracotta-600 hover:bg-terracotta-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-terracotta-500" type="submit" data-turbo="false">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="size-5 text-terracotta-500 group-hover:text-terracotta-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path clip-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" fill-rule="evenodd"></path>
            </svg>
          </span>
          Sign in
        </button>
      </div>
    <% end %>
    <div data-controller="passkeys"  data-passkeys-autologin-value="true">
      <button class="cursor-pointer relative flex justify-center w-full px-4 py-2 text-sm font-medium text-neutral-700 border rounded-md group border-terracotta-600 hover:bg-terracotta-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-terracotta-500" type="submit" data-action="passkeys#buttonSignIn">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3">
          <svg class="size-5 text-terracotta-500" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 7a5 5 0 1 1 3.61 4.804l-1.903 1.903A1 1 0 0 1 9 14H8v1a1 1 0 0 1-1 1H6v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-2a1 1 0 0 1 .293-.707L8.196 8.39A5.002 5.002 0 0 1 8 7Zm5-3a.75.75 0 0 0 0 1.5A1.5 1.5 0 0 1 14.5 7 .75.75 0 0 0 16 7a3 3 0 0 0-3-3Z" clip-rule="evenodd" />
          </svg>
        </span>
        Sign in with a passkey
      </button>
    </div>
  </div>
</div>
<div id="passkey-error" class="hidden">
  <%= render Notification.new(type: :alert, heading: "Error signing in with passkey", text: "Something went wrong", timeout: 3000) %>
</div>
