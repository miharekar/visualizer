<% content_for(:html_title) { "Visualizer | 2025 Year in Coffee" } %>
<div class="flex flex-col items-center px-4 my-16 mx-auto max-w-6xl sm:px-6 lg:px-8 dark:text-neutral-200">
  <% if @yearly_brew.shots_this_year.any? %>
    <div class="space-y-10 w-full sm:space-y-12">
      <%= render "yearly_brew/stats_2025", personal: true %>
      <% if Current.user.public? %>
        <div class="flex justify-center">
          <%= link_to yearly_brew_path(Current.user.slug, 2025), class: "inline-flex items-center gap-x-2 rounded-full bg-terracotta-600 px-4 py-2.5 text-sm font-semibold text-white shadow-md shadow-neutral-900/20 hover:bg-terracotta-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-terracotta-600 dark:shadow-black/40" do %>
            <svg class="-ml-0.5 size-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13 4.5a2.5 2.5 0 11.702 1.737L6.97 9.604a2.518 2.518 0 010 .792l6.733 3.367a2.5 2.5 0 11-.671 1.341l-6.733-3.367a2.5 2.5 0 110-3.475l6.733-3.366A2.52 2.52 0 0113 4.5z" />
            </svg>
            Open your shareable page
          <% end %>
        </div>
      <% else %>
        <div class="flex flex-col gap-y-3 items-center max-w-prose text-center">
          <p class="text-neutral-600 dark:text-neutral-400">
            Want to show off your year in coffee?
            <%= link_to "Make your profile public", edit_profile_path, class: "standard-link text-terracotta-600 dark:text-terracotta-400" %>
            to get a shareable Bean Counting page.
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
