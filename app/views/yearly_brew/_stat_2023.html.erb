              <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
            <% end %>
          </svg>
        </div>
      <% end %>
      <p class="text-sm font-medium truncate text-neutral-500<%= defined?(icon) ? " ml-16" : "" %>">
        <%= title %>
      </p>
    </dt>
    <dd class="flex items-baseline<%= defined?(icon) ? " ml-16" : "" %><%= defined?(diff) && !diff.respond_to?(:positive?) ? " flex-col" : "" %>">
      <p class="text-2xl font-semibold text-neutral-900 dark:text-neutral-200">
        <%= stat %>
      </p>
      <% if defined?(diff) %>
        <% if diff.respond_to?(:positive?) %>
          <% if diff.positive? %>
            <p class="flex items-baseline ml-2 text-sm font-semibold text-green-600">
              <svg class="self-center flex-shrink-0 w-5 h-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
              </svg>
              <%= diff %>
            </p>
          <% elsif diff.negative? %>
            <p class="flex items-baseline ml-2 text-sm font-semibold text-red-600">
              <svg class="self-center flex-shrink-0 w-5 h-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 3a.75.75 0 01.75.75v10.638l3.96-4.158a.75.75 0 111.08 1.04l-5.25 5.5a.75.75 0 01-1.08 0l-5.25-5.5a.75.75 0 111.08-1.04l3.96 4.158V3.75A.75.75 0 0110 3z" clip-rule="evenodd" />
              </svg>
              <%= -diff %>
            </p>
          <% end %>
        <% else %>
          <p class="font-semibold flextext-sm text-neutral-500">
            <%= diff %>
          </p>
        <% end %>
      <% end %>
    </dd>
  </div>
<% end %>
