<% content_for(:html_title) { "Visualizer | 2025 Year in Coffee of #{@user.display_name}" } %>
<div class="flex flex-col items-center mx-auto max-w-6xl sm:px-6 sm:my-6 lg:px-8 lg:mt-8 dark:text-neutral-200">
  <% if @yearly_brew.shots_this_year.any? %>
    <div class="space-y-10 w-full sm:space-y-12">
      <%= render "yearly_brew/stats_2025", personal: false %>
      <% if authenticated? %>
        <div class="flex justify-center">
          <%= link_to personal_yearly_brew_path(year: 2025), class: "inline-flex items-center gap-x-2 rounded-full bg-terracotta-600 px-4 py-2.5 text-sm font-semibold text-white shadow-md shadow-neutral-900/20 hover:bg-terracotta-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-terracotta-600 dark:shadow-black/40" do %>
            <svg class="-ml-0.5 size-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 8a3 3 0 100-6 3 3 0 000 6zM3.465 14.493a1.23 1.23 0 00.41 1.412A9.957 9.957 0 0010 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 00-13.074.003z" />
            </svg>
            See your own 2025 stats
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
