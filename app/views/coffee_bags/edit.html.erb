<div class="bg-white shadow dark:bg-neutral-900">
  <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold leading-tight text-neutral-900 dark:text-neutral-100">
      Edit <%= @coffee_bag.name %> by <%= @roaster.name %>
    </h1>
  </div>
</div>
<div class="pt-6 mx-auto max-w-7xl md:py-6 md:px-6 lg:px-8">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="px-4 sm:px-6 md:p-0 md:col-span-1">
      <div>
        <h3 class="font-medium leading-6 text-neutral-900 dark:text-neutral-100">
          You made
          <strong><%= link_to pluralize(@coffee_bag.shots.count, "shot"), shots_path(coffee_bag: @coffee_bag), class: "standard-link" %></strong>
          with
          <strong><%= @coffee_bag.name %></strong>
          by
          <strong><%= link_to @roaster.name, roaster_coffee_bags_path(@roaster), class: "standard-link" %></strong>.
        </h3>
      </div>
      <hr class="my-6 text-neutral-200 dark:text-neutral-700">
      <div>
        <h3 class="font-medium leading-6 text-neutral-900 dark:text-neutral-100">
          Duplicate this coffee bag with a different roast date
        </h3>
        <div class="flex-1 mt-3 text-sm text-neutral-600 dark:text-neutral-400">
          <%= form_with(url: duplicate_roaster_coffee_bag_path(@roaster, @coffee_bag), class: "flex flex-row items-center gap-2 md:flex-col lg:flex-row md:items-stretch lg:items-center") do |f| %>
            <%= f.date_field :roast_date, class: "mt-0 standard-input" %>
            <%= f.submit "Duplicate", class: "px-4 py-2 button-oxford-blue md:w-full lg:w-auto" %>
          <% end %>
        </div>
      </div>
    </div>
    <hr class="mx-4 mt-6 md:hidden sm:mx-6 text-neutral-200 dark:text-neutral-700">
    <%= render "form", coffee_bag: @coffee_bag %>
  </div>
</div>
