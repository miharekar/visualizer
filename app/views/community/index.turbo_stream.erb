<%= turbo_stream.append "shots" do %>
  <%= render @shots %>
<% end %>
<%= turbo_stream.replace "cursor" do %>
  <%= render partial: "shared/cursor_loader", locals: { cursor: @cursor, path: community_index_path(params.permit(*Filterable::FILTERS, :user, :user_id, :min_enjoyment, :max_enjoyment, :start_date).merge(commit: "Search", before: @cursor, format: :turbo_stream)) } %>
<% end %>
